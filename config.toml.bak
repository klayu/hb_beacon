baseURL = "https://klayu.github.io/hb_beacon/"
metaDataFormat = "yaml"
title = "BLOG : hb_beacon"
theme = "blist"
show_reading_time = true
publishDir = "publicTmp"
enableRobotsTXT = true
#googleAnalytics = "G-xxxxxx"
disqusShortname = "relaxedincome"
googleAnalytics = 'G-G1TTB1QKFD'

DefaultContentLanguage = "en"
DefaultContentLanguageInSubdir = false
#
timeout = 600000
#
[permalinks]
  posts = "/:filename"
  blog = "/:filename"
  page = "/:filename"
#
[languages]
  [languages.en]
    contentDir = "content/en"
    weight = 1
    languageName = "English"
    [languages.en.params]
      introTitle = "Hey! I'm Aria Alessi"
      introSubtitle = "Angelino who enjoys blogging and painting"
      introPhoto = "/ariaalessiarts_person_being_super_happy.png"
      logo = "/blist-logo.png"
    [[languages.en.menu.main]]
        name = "Blog"
        url = "blog"
        weight = 1
    [[languages.en.menu.main]]
        name = "Tags"
        url = "tags"
        weight = 2
#
[params]
  darkModeToggle = true
  enableSearch = true

  searchKeys = [
    "tags",
    "date",
    "categories",
    "summary",
    "content",
    "link",
    "author"
  ]
#
  copyright = "Copyright © 2023 - hb_beacon · All rights reserved"
  favicon = "/favicon.svg"
#
  ascentColor = "bg-blue-100"
#
  frontBundle = "blog"
#
  hideMeta = false
#
  hideOtherLanguages = true
#
  toc = false
#
  hidePageThumbnail = true
# Comment system
[params.comments]
  system = "disqus"
[build]
  writeStats = true
[outputs]
  home = ["HTML", "RSS", "JSON"]
[markup]
  [markup.highlight]
    style = "dracula"
  [markup.goldmark.renderer]
    unsafe = true
#
[sitemap]
  changefreq = "daily"
  priority = 0.5
  filename = "sitemap.xml"
